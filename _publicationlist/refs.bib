	author = {Paix\~{a}o, Gabriela M. M. and Lima, Emilly M. and Gomes, Paulo R. and Oliveira, Derick M. and Ribeiro, Manoel H. and Nascimento, Jamil S. and Ribeiro, Antonio H. and Macfarlane, Peter W. and Ribeiro, Antonio L. P.},
