	journal = {Computers in Cardiology (CinC)},
	author = {Reyna, Matthew A. and Koscova, Zuzana and Pavlus, Jan and Saghafi, Soheil and Weigle, James and Elola, Andoni and Seyedi, Salman and Campbell, Kiersten and Li, Qiao and Rad, Ali Bahrami and Ribeiro, Ant\^{o}nio H. and Ribeiro, Antonio Luiz P. and Sameni, Reza and Clifford, Gari D.},
